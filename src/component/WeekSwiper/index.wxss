
.WeekSwiper-wrap {
  width: 100%;
  background-color: #19be6b;
  color: #fff; }

.WeekSwiper-row {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  width: 100%;
  text-align: center;
  font-size: 40rpx;
  margin-bottom: .5em; }

.WeekSwiper-day {
  font-weight: bolder; }

.WeekSwiper-day-selected {
  font-weight: bolder;
  background-color: #fff;
  color: #19be6b;
  border-radius: 2em; }

.WeekSwiper-swiper {
  width: 100%;
  height: 90rpx;
  font-size: 28rpx; }
